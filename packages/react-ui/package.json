{
  "name": "@hexos/react-ui",
  "version": "0.3.2",
  "description": "React UI components for Hexos chat interfaces",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css",
    "./tailwind.css": "./dist/tailwind.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:css": "tailwindcss -i src/styles/tailwind.css -o dist/tailwind.css --minify",
    "build": "tsup src/index.ts --format esm --dts --clean --external react --external react-dom && cp src/styles/chat.css dist/styles.css && pnpm build:css",
    "dev": "tsup src/index.ts --format esm --dts --watch --external react --external react-dom",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@hexos/react-core": "0.3.2",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-visually-hidden": "^1.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "3",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "keywords": [
    "react",
    "ui",
    "chat",
    "agent",
    "ai",
    "components"
  ],
  "license": "MIT",
  "gitHead": "4de5ab35bad3cf18bdcb23cb3cb5f5dfe1c22d61"
}
